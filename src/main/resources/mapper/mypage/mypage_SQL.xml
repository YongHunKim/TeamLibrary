<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mypage">
	
	<select id="pcheck_ok" parameterType="hashmap" resultType="int">
		SELECT COUNT(*) FROM member WHERE id=#{id} AND pwd=#{pwd}  
	</select>

	<select id="member_update" parameterType="String" resultType="membervo">
		SELECT id,pwd,name,tel,post,addr1,addr2,email FROM member WHERE id=#{id}
	</select>
	
	<update id="member_update_ok" parameterType="membervo">
		UPDATE member SET pwd=#{pwd},tel=#{tel},post=#{post},addr1=#{addr1},addr2=#{addr2},email=#{email} WHERE id=#{id}
	</update>

	
</mapper>