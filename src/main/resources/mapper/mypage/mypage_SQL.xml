<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mypage">
 	<select id="pcheck_pwd" parameterType="String" resultType="int">
		select count(*) from member where pwd=#{pwd}
	</select>
	
	<select id="pcheck_ok" parameterType="hashmap" resultType="int">
		select count(*) from member where id=#{id} and pwd=#{pwd}  
	</select>

	<select id="member_update" parameterType="String" resultType="membervo">
		select id,name,tel,post,addr1,addr2,email from member where id=#{id}
	</select>
	
</mapper>