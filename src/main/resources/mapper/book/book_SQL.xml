<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">

	<select id="bookInfo" parameterType="String" resultType="bookvo">
		SELECT book_code,book_name,book_author,book_publish,book_publish_date,book_info,rent_yn,reserve_yn,book_rent_count,book_image,book_storage_date,book_category
		FROM book
		WHERE book_code=#{book_code}
	</select>
	
	<insert id="bookRent" parameterType="hashmap">
		INSERT INTO book_management(book_management_code,id,book_code,rent_date,return_date)
		VALUES((SELECT nvl(max(book_management_code)+1,1) FROM book_management),#{id},#{book_code},sysdate,sysdate+7)
	</insert>
</mapper>